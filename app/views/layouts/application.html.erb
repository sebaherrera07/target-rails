<!DOCTYPE html>
<html>
  <head>
    <title>Target</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="main-container" class="container-fluid container-full-size">
      <div class="row container-row">
          <div id="sidebar" class="sidebar-text-wrapper col-md-3">
            <%= render "shared/sidebar", target: @target %>
          </div>
          <div id="content" class="col-md-9">
            <%= yield %>
          </div>
      </div>
    </div>
  </body>
</html>
