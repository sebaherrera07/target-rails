<div id="content" class="text-wrapper col-md-6">
  <%= image_tag("smilies.png", class: "smilies-main", size: "133x78") %>
  <h1 class="user-form-title"><%=I18n.t(:title_target)%></h1>
  <h2 class="user-form-subtitle"><%=I18n.t(:subtitle_find_people)%></h2>
  <p class="user-form-paragraph"><%=I18n.t(:paragraph_intro)%></p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render 'users/shared/error_messages', object: resource %>

    <%= f.label :email, I18n.t(:label_user_email), class: 'user-form-input-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'user-form-input-text' %>

    <%= f.label :password, I18n.t(:label_user_password), class: 'user-form-input-label' %>
    <%= f.password_field :password, autocomplete: "off", class: 'user-form-input-text' %>

    <%= f.submit I18n.t(:btn_sign_in), class: 'user-form-form-button' %>
    <%= link_to I18n.t(:btn_forgot_password), new_password_path(resource_name), class: 'user-form-link' %><br />

    <div class="line"></div>
    <%= link_to I18n.t(:btn_sign_up), new_registration_path(resource_name), class: 'user-form-link' %><br />
  <% end %>
</div>

<div class="static-side col-md-6">
  <%= render "shared/static_side"%>
</div>
