<div id="content" class="text-wrapper col-md-6">
  <%= image_tag("smilies.png", class: "smilies-main", size: "133x78") %>
  <h1 class="user-form-title"><%=I18n.t(:title_reset_password)%></h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render 'users/shared/error_messages', object: resource %>

    <%= f.label :email, I18n.t(:label_user_email), class: 'user-form-input-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'user-form-input-text' %>

    <%= f.submit I18n.t(:btn_reset_password), class: 'user-form-form-button' %>

    <div class="line"></div>
    <%= link_to I18n.t(:btn_sign_in), new_session_path(resource_name), class: 'user-form-link' %><br />
    <%= link_to I18n.t(:btn_sign_up), new_registration_path(resource_name), class: 'user-form-link' %><br />
  <% end %>
</div>

<div class="static-side col-md-6">
  <%= render "shared/static_side"%>
</div>
