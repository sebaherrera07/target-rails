<div class="modal fade" id="targetModal" tabindex="-1" role="dialog" aria-labelledby="targetModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content text-wrapper">
      <div class="modal-header">
        <h5 class="modal-title"><%=I18n.t(:title_target_data)%></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table">
          <tbody>
            <tr>
              <td class="details-concept"><%=I18n.t(:details_target_title)%>:</td>
              <td class="details-value" id="targetTitle"></td>
            </tr>
            <tr>
              <td class="details-concept"><%=I18n.t(:details_target_topic)%>:</td>
              <td class="details-value" id="targetTopic"></td>
            </tr>
            <tr>
              <td class="details-concept"><%=I18n.t(:details_target_size)%>:</td>
              <td class="details-value" id="targetSize"></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="modal-button secondary" data-dismiss="modal"><%=I18n.t(:btn_close)%></button>
        <button type="button" class="modal-button warning" onclick="deleteTarget()"><%=I18n.t(:btn_delete_target)%></button>
      </div>
    </div>
  </div>
</div>
